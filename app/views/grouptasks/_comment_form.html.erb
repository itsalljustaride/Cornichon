<div class="comment_form">
	Leave a text comment (or an <%= link_to 'audio comment', url_for(:controller => 'comments', :action => 'new', :rec => rec) %>):
	<% form_remote_tag :url => {:controller => 'grouptasks', :action => 'create_comment'} do %>
		<%= text_area_tag 'comment[body]', nil, :cols => 40, :rows => 10, :id => 'new_comment' %>
		<%= hidden_field_tag 'comment[student_id]', current_user.id %>
		<%= hidden_field_tag 'comment[sessionrecording_id]', rec.id %>
		<%= hidden_field_tag 'comment[kind]', comment_kind(task) %><br/>
		<%= submit_tag 'Submit' %>
		<%= button_to_function 'Insert Current Timecode', "InsertTime(#{rec.identifier},new_comment)", :class => "timecode_button" %>
	<% end %>
</div>