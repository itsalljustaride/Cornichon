<div id="content">
  <h1>Edit Comment on "<%= @comment.sessionrecording.cliptitle %>"</h1>
  <div class="content_container">
    <div class="standalone_comment_form">
      <%= render :partial => 'audioplayer', :object => @rec %>

      <% form_for @comment, :html => { :multipart => true } do |f| %>
        <%= f.error_messages %>
        <p>
      		<%= f.text_area :body, :rows => 10, :id => 'new_comment' %>
      		<%= f.file_field :audio %>
      		<%= button_to_function 'Insert Current Timecode', "InsertTime(#{@comment.sessionrecording.identifier},new_comment)", :class => "timecode_button" %>
        <p>
          <%= f.submit "Save" %>
        </p>
      <% end %>

      <%= link_to 'Back', @comment.sessionrecording.task %>
    </div>
  </div>
</div>