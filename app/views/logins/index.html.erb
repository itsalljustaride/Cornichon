<div id="title">
	<h1>Cornichon</h2>
</div>
<div id="content">
	<div id="loginwrapper">
		<%= image_tag 'logo.png', :id => 'logo' %>
		<div id="login">
			<p class="message">
			Enter your username and password
			</p>
			<div id="form">
				<p>
				<%= form_tag url_for(:controller => 'logins', :action => 'user_auth'), :method => 'post' %>
					Username:<input type="text" size="20" maxlength="20" name="username"><br />
					Password:<input type="password" size="20" maxlength="30" name="password"><br />
					<input type="submit" value="submit" name="submit"><br />
				</form>
				</p>
			</div>
			<% if flash[:notice] -%>
				<div id="notice"><p><%= flash[:notice] %></p></div>
			<% end -%>
		</div>
	</div>
	<div id="login_copyright">
	  <%= render :partial => 'layouts/copyright' %>
	  <br/><br/>
	  "Pickle Delivery" image used courtesy of <%= link_to "Natalie Dee.com", "http://www.nataliedee.com" %>
	</div>
</div>